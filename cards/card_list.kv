<HeroCard@MDCard>
    orientation: "vertical"
    size_hint: 1, None
    height: "340dp"
    elevation: 4
    source: ""
    label: ""
    radius: 24
    padding: 12
    ripple_behavior:True
    on_release: app.my_callback()
    elevation: 6
    md_bg_color: "#ffffff"
    MDHeroFrom:
        id: hero_from
        size_hint: 1, 0.95
        #height: root.height / 1.8
        #ffffff

        FitImage:
            source: root.source
            size_hint: None, None
            size: hero_from.size
            radius: 24
            allow_stretch: True

    AnchorLayout:
        size_hint: 1, 0.1

        MDLabel:
            text: root.label
            bold: True
            adaptive_height: True
            #padding: 12, 12
            font_style: "H5"
            anchor_x: "left"
            anchor_y: "middle"

        

    

<HeroCard2@MDCard>
    orientation: "vertical"
    size_hint: 1, None
    height: "120dp"
    elevation: 4
    source: ""
    radius: 24
    padding: 5
    ripple_behavior:True
    on_release: app.my_callback()
    elevation: 6
    md_bg_color: "#ffffff"
    MDHeroFrom:
        id: hero_from
        size_hint: 1, 0.9
        #height: root.height / 1.8
        #ffffff

        FitImage:
            source: root.source
            size_hint: None, None
            size: hero_from.size
            radius: 24
            allow_stretch: True

    MDLabel:
        text: "Object"
        bold: True
        adaptive_height: True
        padding: 12, 12
        font_style: "Body2"