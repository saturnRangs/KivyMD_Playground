#:kivy 1.0.9
#:import utils kivy.utils


########################################

BoxLayout:
    orientation: 'vertical'
    md_bg_color: "#1c1b1b"
    

    ###### TOP LABEL ######
    FloatLayout:
       # md_bg_color: "#440e87"
        size_hint: 1, 0.12
        canvas.before:
            Color:
                rgba: 0.27, 0.05, 0.53, 1
            Rectangle:
                pos: self.pos
                size: self.size


        MDIconButton:
            icon: "home"
            theme_text_color: "Custom"
            icon_color: "#ffffff"
            pos_hint: {"center_x": 0.03, "center_y": .5}
            padding_x: "5dp" 
            md_bg_color: "#440e87"
            icon_size: "25sp"
            #on_release: app.switch_backward()

       
        MDLabel:
            text: "Image Switcher"
            color: "#ffffff"
            bold: True
            halign: "center"
            font_style: "H5"
            padding_x: "10dp"
            padding_y: "10dp"
            size_hint: 0.65, 0.9
            #text_size: self.width, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.5} 


        MDSwitch:
            pos_hint: {'center_x': 0.95, 'center_y': 0.5} 
            active: False

       
    FloatLayout:
        size_hint: 1, 1

        ######### BACKGROUND ########
        FitImage:
            source: 'assets/background.jpeg'  
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            allow_stretch: True
            keep_ratio: True


        FloatLayout:
            ############# LABEL ###############
            MDLabel:
                text: "Initial Text"
                id: text_label
                pos_hint: {'center_x': 0.75, 'center_y': 0.75}
                halign: "center"
                size_hint: 0.5, 0.6
                valign: "top"
                #padding: "16dp"
                font_style: "Body1"
                color: "#fff2f5"
                #bold: True

        ######### FRONT IMAGE ###########
        FitImage:
            size_hint: 0.8,1
            id: image_widget
            source: 'assets/picture_2.jpg'
            pos_hint: {'center_x': 0.4, 'center_y': 0.5}
            allow_stretch: False
            keep_ratio: True

    

    MDBoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.1
        md_bg_color: "#440e87"
        adaptive_height: True
        #adaptive_size: True


        MDIconButton:
            icon: "arrow-left-bold"
            theme_text_color: "Custom"
            icon_color: "#ffffff"
            pos_hint: {"center_x": .5, "center_y": .5}
            md_bg_color: "#440e87"
            icon_size: "25sp"
            on_release: app.switch_backward()

        MDLabel:
            text: "Step 1"
            id: text_step
            halign: "center"
            valign: "top"
            font_style: "H5"
            color: "#ffffff"
            md_bg_color: "#440e87"
            bold: True
            
        MDIconButton:
            icon: "arrow-right-bold"
            theme_text_color: "Custom"
            icon_color: "#ffffff"
            pos_hint: {"center_x": .5, "center_y": .5}
            md_bg_color: "#440e87"
            icon_size: "25sp"
            on_release: app.switch_forward()